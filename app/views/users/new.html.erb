<h1>Sign Up!</h1>

<%= form_for :registration, url: users_path do |f| %>

	<p>
		<%= f.label :firstname %><br>
		<%= f.text_field :firstname %>
	</p>

	<p>
		<%= f.label :lastname %><br>
		<%= f.text_field :lastname %>

	</p>

	<p>
		<%= f.label :age %><br>
		<%= f.text_field :age %>
	</p>	

	<p>
		<%= f.label :gender %><br>
		<%= f.text_field :gender %>
	</p>

	<p>
		<%= f.label :username %><br>
		<%= f.text_field :username %>

	</p>

	<p>
		<%= f.label :password %><br>
		<%= f.text_field :password %>

	</p>

	<p>
		<%= f.label :confirm_password %><br>
		<%= f.text_field :confirm_password %>

	</p>

	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email %>

	</p>

	<p>
		<%= f.submit %>
		
	</p>

<% end %>


